// @author: RenatoGM
fn main() {
    solve();
}
 
fn solve() -> () {
    let mut n: String = String::new();
    std::io::stdin()
        .read_line(&mut n)
        .expect("Failed to read the line");
    let n: u8 = n.trim().parse().expect("NaN");
    if n % 2 == 0 && n > 3{
        println!("YES");
    } else {
        println!("NO");
    }
}
